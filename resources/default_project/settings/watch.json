// Module-specific settings, loaded and used only when Watch is run. Any value
// set here overrides the value with the same name in the global settings file,
// ./global.json.
//
// -----------------------------------------------------------------------------
//
// Remember that these settings are for ieng9.
//
// -----------------------------------------------------------------------------

{
    // How often Watch checks for new test files, in seconds.
    //
    "check_interval": 5,

    // Test repo, absolute or project-relative.
    //
    "test_folder": "../testcases",

    // Log files go here.
    //
    "data_folder": "data",

    // Compile assembly test case with I/O files, then run. The working path
    // for this command is test_folder.
    //
    "compiler_invocation": "cc {testcase} ../input.c ../output.s && ./a.out",

    // Sparc assembly uses a .s extension.
    //
    "source_extension": ".s"
}